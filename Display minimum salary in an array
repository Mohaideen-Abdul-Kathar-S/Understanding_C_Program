


#include<stdio.h>
void main(){ float a[50],n,b=0;
	printf("Employees: ") && scanf("%f",&n);
if(n>0){
	for(int i=0;i<n;i++)
		printf("Salary for employee %d: ",i+1) && scanf("%f",&a[i]);
	for(int i=0;i<n;i++)
		if(b>a[i] || i==0) b=a[i];
	printf("Minimum salary: %0.2f\n",b);
}else printf("Invalid number\n");}


