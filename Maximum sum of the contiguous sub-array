


#include<stdio.h>
void main(){
	int b=0,c=0,i,n;
	scanf("%d",&n);
	if(n>0){
	int arry[n];
	for(i=0;i<n;i++){
		scanf("%d",&arry[i]);
	}
b=arry[0];
for(i=0;i<n;i++){
c=0;
for(int j=0;j<n;j++){ 
			c=c+arry[j];
		if(c>b)
			b=c;
	}
}
	printf("%d\n",b);
	}
}

