


#include <stdio.h>
int main() {
    int num;
    
    printf("num: ");
    
    scanf( "%d",&num    );  // Read an integer from the user and store it in 'num'.
    
    int *ptr = &num   ;  // Declare a pointer variable 'ptr' and point it to the address of 'num'.
   
    printf("num using pointer: %d\n",  *ptr    );  // Print the value of 'num' using the pointer.
   
    return 0;
}

/*


Sample Test Cases
Test case 1
num:·35	
num·using·pointer:·35⏎	
Test case 2
num:·78	
num·using·pointer:·78⏎

*/
