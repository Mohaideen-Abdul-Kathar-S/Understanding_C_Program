// Total runs scored


#include<stdio.h>
void main()
{
	int a,b,c;
	printf("Enter the total number of balls faced : ");
	scanf("%d",&a);
	for(int i=1;i<=a;i++){
		printf("Enter the score on ball %d : ",i);
		scanf("%d",&c);
		b=c+b;}
	printf("Total score : %d\n",b);
}


