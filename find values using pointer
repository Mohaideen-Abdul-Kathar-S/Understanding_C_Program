



#include <stdio.h>
void main() {
	
	int *a;
	float *b;
	char *c;
	
printf("Enter int, float and char values :");
scanf("%d %f %c",&a,&b,&c);
	int *a1=&a;
	float *b2=&b;
	char *c3=&c;
	printf("Given int value:%d\nGiven float value:%f\nGiven char value:%c\n",*a1,*b2,*c3);
}

